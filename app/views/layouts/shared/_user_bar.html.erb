<% if logged_in? -%>
  <style>body {background-position: 0 36px;}</style>
  <ul id="<%= container %>" class="hoverable dropdown">
  	
  	<li class="first plain"><%= link_to_current_user :content_method => :name %></li>
  	<li class="plain"><%= link_to "Sign Out", logout_path, :title => "Log out" %></li>
  	<li class="edit-page"></li>
  	
  	<% if current_user.has_role?("admin") %>
  	  <li class="right img"><%= link_to image_tag("bg/ub_access.png", :size => "33x33", :alt => "Access"), pages_path, :title => "Manage Page Access" %></li>
  	  <li class="right img"><%= link_to image_tag("bg/ub_users.png", :size => "33x33", :alt => "Users"), users_path, :title => "Manage Users and Roles" %></li>
  	  
  	  <% if display_page_edit_tags? %>
  	  <li class="img"><%= link_to image_tag("bg/ub_settings.png", :size => "33x33", :alt => "Settings"), edit_page_path(@page), :title => "Page settings" %></li>
  	  <% end -%>
  	<% end -%>
  	
  	<% if display_page_edit_tags? %>
  	<li class="add-stuff">Add Stuff
  	  <ul class="sub">
  	    <li><%= link_to "#{params[:controller].singularize.capitalize}", :controller => params[:controller], :action => "new" %></li>
  	    <li><%= link_to "Component", new_page_component_path, :title => "Add a component to this page" %></li>
  	    <% if current_user.has_role?("admin") %>
  	    <li><%= link_to "New Page", new_page_path, :title => "Create a new Page" %></li>
  	    <% end -%>
      </ul>
    </li>
    <% end -%>
    
  </ul>
<% end -%>