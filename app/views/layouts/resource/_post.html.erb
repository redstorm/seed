<div class="post" id="post_<%= post.id %>">
	
	<h2><%= link_to post.title, page_post_path(@page, post) %></h2>
	<h4><%= simple_date(post.created_at) %></h4>
	
	<% cache "article-#{post.id}-images" do %>
	<div id="images">
    <% post.images.each do |image| %>
    	<a href="<%= image.public_filename %>" class="lightview" rel="gallery[<%= post.id %>]">
        <%= image_tag image.public_filename("#{post.imagesize}"), :size => image.thumbnail_size("#{post.imagesize}") %>
      </a>
    <% end -%>
  </div>
  <% end -%>
  
	<%= textilize(truncate(post.content, 1000, "... #{link_to '[more]', page_post_path(@page, post)}")) %>
	
	<% if post.commentable? %>
	  <% cache "post-#{post.id}-commentcount" do %>
	  <em><%= link_to pluralize(post.comments.approved.count, 'comment'), page_post_path(@page, post) %></em>
	  <% end -%>
	<% end -%>
	
</div>

<% if editable?(@page) -%>
	<div id="edit-link-<%= post.id %>" style="display:none">
		<div class="first"><%= link_to "edit", edit_page_post_path(@page, post)%></div>
		<div><%= link_to "delete", page_post_path(@page, post), :confirm => 'Delete this post?', :method => :delete %></div>
	</div>
  <script>
  	new Tip($("post_<%= post.id %>").down('h2'), $("edit-link-<%= post.id %>"), {style: 'seed-edit'});
  </script>
<% end -%>