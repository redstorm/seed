<div class="span-14">
<% form_for([@page, @event], :html => {:class => "seed-admin"}) do |f| %>
  
  <%= f.error_messages %>
  <div id="fieldset">
    <div class="input-row">
      <%= f.label :name, "Event Name" %>
      <%= f.text_field :name %>
    </div>
    
    <div class="input-row">
      <%= f.label :all_day %>
      <%= f.check_box :all_day, :onclick => "toggle_when_field(this);", :style => "width:4%;" %>
    </div>
    
    <div id="_datetime" style="<%= initial_display_style(:datetime) %>" class="input-row">
        <%= f.label :datetime, "When" %>
        <%= f.calendar_date_select :datetime, :popup => :force, :class => "date" %>
    </div>
    <div id="_date" style="<%= initial_display_style(:from_date) %>" class="input-row">
        <%= f.label :from_date, "From" %>
        <%= f.calendar_date_select :from_date, :popup => :force, :onchange => "set_to_date_value(this);", :class => "date" %>
        <div class="input-row">
        <%= f.label :to_date, "To" %>
        <%= f.calendar_date_select :to_date, :popup => :force, :class => "date" %>
        </div>
    </div>
    
    <div class="input-row">
      <%= f.label :description %>
      <%= f.text_area :description, :class => "compact" %>
    </div>
    <div class="input-row">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
  </div>
  <div class="submit">
    <%= f.submit "#{submit}" %> or <%= link_to_function 'cancel', 'history.go(-1)' %>
  </div>
<% end %>
</div>
